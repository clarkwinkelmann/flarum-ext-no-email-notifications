{
    "name": "clarkwinkelmann/flarum-ext-no-email-notifications",
    "description": "Removes the Flarum email notification driver",
    "keywords": [
        "flarum",
        "notifications",
        "driver"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2"
    },
    "authors": [
        {
            "name": "Clark Winkelmann",
            "homepage": "https://clarkwinkelmann.com/",
            "email": "clark.winkelmann@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/clarkwinkelmann/flarum-ext-no-email-notifications"
    },
    "autoload": {
        "psr-4": {
            "ClarkWinkelmann\\NoEmailNotifications\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "No Email Notifications",
            "category": "feature",
            "icon": {
                "name": "fas fa-bell-slash",
                "backgroundColor": "#684ba6",
                "color": "#fff"
            }
        }
    }
}
